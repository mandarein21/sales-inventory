<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>G Mercado's Inventory and Sales Management System</title>
    <style>
        body {
            background-color: #e2e2e2;
            background-image: url(/images/bg1.png);
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .login-container {
            max-width: 600px;
            background-color: rgb(255, 255, 255);
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
        }

        .login-sidebar {
            background-color: #5e775e;
            padding: 30px;
            border-radius: 10px 0 0 10px;
            color: white;
            width: 200px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .login-content {
            padding: 30px;
            flex-grow: 1;
        }

        .dropdown-toggle {
            background-color: #8db18d;
            color: white;
            border: none;
            width: 100%;
        }

        .dropdown-menu {
            width: 100%;
        }

        .hidden {
            display: none;
        }

        .form-control {
            width: 100%;
        }

        #selectedRole {
            color: white;
        }
    </style>
</head>
<body>



    <div class="login-container">
        <!-- Sidebar with Dropdown -->
        <div class="login-sidebar">
            <!-- Logo in the sidebar -->
            <img src="/images/gmercado'slogo.png" alt="Logo" class="img-fluid mb-4 mx-auto d-block" style="max-width: 100px;">
            
            <!-- Dropdown inside sidebar -->
            <div class="dropdown w-100">
                <button class="btn dropdown-toggle" type="button" id="roleDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <span id="selectedRole">Select Role</span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="roleDropdown">
                    <li><a class="dropdown-item" href="#" onclick="showLogin('admin')">Admin</a></li>
                    <li><a class="dropdown-item" href="#" onclick="showLogin('employee')">Employee</a></li>
                </ul>
            </div>
        </div>

        <!-- Login Content -->
        <div class="login-content">
            <h5 class="text-center">G Mercado's Inventory and Sales Management System</h5>

            <!-- Error Message Display -->
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <!-- Admin Login Form -->
            <div id="adminLogin">
                <h3 class="mt-4 text-center">Admin Login</h3>
                <form action="/admin/login" method="POST">
                    <div class="mb-3">
                        <label for="adminUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="adminUsername" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="adminPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="adminPassword" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Sign in</button>
                </form>
            </div>

            <!-- Employee Login Form (initially hidden) -->
            <div id="employeeLogin" class="hidden">
                <h3 class="mt-4 text-center">Employee Login</h3>
                <form action="/employee/login" method="POST">
                    <div class="mb-3">
                        <label for="employeeUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="employeeUsername" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeePassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="employeePassword" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Sign in</button>
                </form>
                
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to show the selected login form and update dropdown text
        function showLogin(role) {
            document.getElementById('adminLogin').classList.add('hidden');
            document.getElementById('employeeLogin').classList.add('hidden');

            if (role === 'admin') {
                document.getElementById('adminLogin').classList.remove('hidden');
                document.getElementById('selectedRole').textContent = 'Admin'; // Update dropdown text to Admin
            } else if (role === 'employee') {
                document.getElementById('employeeLogin').classList.remove('hidden');
                document.getElementById('selectedRole').textContent = 'Employee'; // Update dropdown text to Employee
            }
        }

        
        // Show the default Admin Login form on initial load
        window.onload = function() {
            showLogin('admin');
        };
    </script>
</body>
</html>
